<div class="text-center">
  <p>Post ID: <span id="post-id">{{id}}</span></p>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#each comment}}
  <p>{{comment.commentText}}</p>
{{/each}}

<section>
  <h3>Comments</h3>
  {{#each comments}}
  <h5>{{commentBody}}</h5>
  <p>Created by {{user_id}} on {{format_date date_created}}</p>
  {{/each}}
  <h4>Comment on this post: </h4>
  <input placeholder="Comment..." class="commentBody"/>
  <button class="postComment">Post</button>
</section>

<script src="/js/comment.js"></script>
